{
  "manifest_version": 3,
  "name": "Bookie",
  "version": "1.0",
  "description": "Bookie is a lightweight companion extension that enhances Firefox's built-in bookmarks with custom categories and easier browsing.",
  "permissions": ["bookmarks"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "sidebar_action": {
    "default_title": "Bookie",
    "default_panel": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
